@model IEnumerable<Data.Models.PhoneLineEmployee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-12">
            <h2 class="text-black">
                Phone Lines Employees
            </h2>
        </div>
    </div>
    <br />

    <table class="table table-striped border">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhoneLine.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.EmployeeId)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneLine.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.EmployeeId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PhoneNumber">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PhoneNumber">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PhoneNumber">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>